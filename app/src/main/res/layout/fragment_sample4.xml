<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sample4Fragment">

    <!-- Get rewarded -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/get_rewarde"
            android:layout_width="363dp"
            android:layout_height="61dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="564dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="0sp"
            android:text="@string/get_rewarde"
            android:textAppearance="@style/get_rewarde" />
    </LinearLayout>

    <!-- If you achieve your personal goal you can coose between attractive eco-friendly rewards. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/if_you_achi"
        android:layout_width="252dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="79dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="623dp"
        android:text="@string/if_you_achi"
        android:textAppearance="@style/if_you_achi"
        android:lineSpacingExtra="1sp"
        android:translationY="-0.47sp"
        android:gravity="center_horizontal|top"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>